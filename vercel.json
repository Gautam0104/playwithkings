{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "www",
  "public": true,
  "rewrites": [
    {
      "source": "/assets/:path*",
      "destination": "/assets/:path*"
    },
    {
      "source": "/build/:path*",
      "destination": "/build/:path*"
    },
    {
      "source": "/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/cordova.js",
      "destination": "/cordova.js"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
} 